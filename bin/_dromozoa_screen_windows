n=`screen "$@" -Q number`
n=`expr "x$n" : 'x\([0-9][0-9]*\)'`
t=`screen "$@" -Q title`
printf '%d\t*\t%s\n' "$n" "$t"

while :
do
  screen "$@" -X next
  i=`screen "$@" -Q number`
  i=`expr "x$i" : 'x\([0-9][0-9]*\)'`

  case x$i in
    x$n) break;;
  esac

  t=`screen "$@" -Q title`
  printf '%d\t\t%s\n' "$i" "$t"
done

screen "$@" -X redisplay
