LANG=C
LC_ALL=C
export LANG LC_ALL

case X$1 in
  X) author="Tomoyuki Fujimori";;
  *) author=$1;;
esac

git ls-files | while read i
do
  copyright=`sed -n "/Copyright (C) .* $author/p" <"$i"`
  years=`git log --author="$author" --date="format:%Y" --format="%ad" "$i" | sort | uniq`
  printf '%s\n  %s\n  %s\n' "$i" "$copyright" "$years"
done
