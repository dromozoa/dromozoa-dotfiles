dromozoa_machine_id_darwin() {
  case x$TMPDIR in
    x) TMPDIR=/tmp;;
  esac
  tmp=`(umask 077 && mktemp -d "$TMPDIR/dromozoa-XXXXXX" 2>/dev/null || :)`
  case x$tmp in
    x) tmp=$TMPDIR/dromozoa-$$-$RANDOM; (umask 077 && mkdir "$tmp");;
  esac
  cd "$tmp"
  tmp=`pwd`
  trap "(cd / && rm -fr '$tmp')" 0

  name=dromozoa-machine-id
  cat <<EOH >"$name.c"
#include <stdio.h>
#include <unistd.h>
#include <uuid/uuid.h>

int main(int ac, char* av[]) {
  uuid_t id;
  uuid_clear(id);
  struct timespec wait = { 0, 0 };
  if (gethostuuid(id, &wait) == -1) {
    return 1;
  }
  uuid_string_t s = { 0 };
  uuid_unparse(id, s);
  printf("%s\n", s);
  return 0;
}
EOH
  if gcc $CPPFLAGS $LDFLAGS -g -O2 "$name.c" -o "$name" >/dev/null 2>&1
  then
    "./$name"
  fi
}

dromozoa_machine_id() {
  id=`cat /sys/class/dmi/id/product_uuid 2>/dev/null || :`
  case x$id in
    x) ;;
    *) echo "$id"; return;;
  esac
  id=`cat /sys/hypervisor/uuid 2>/dev/null || :`
  case x$id in
    x) ;;
    *) echo "$id"; return;;
  esac
  cat /proc/cpuinfo | while read line
  do
    id=`expr "x$line" : 'xSerial[^:]*: \(.*\)' || :`
    case x$id in
      x) ;;
      *) echo "$id"; return;;
    esac
  done
}

case x`uname` in
  xDarwin)
    dromozoa_machine_id_darwin;;
  *)
    dromozoa_machine_id;;
esac
