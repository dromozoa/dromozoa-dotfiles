branch=`git symbolic-ref HEAD`
case X$branch in
  X*/feature) ;;
  *) _dromozoa_error "on branch $branch";;
esac
git checkout develop
git merge --no-ff -m "作業ブランチをマージ。" feature
git branch -d feature
