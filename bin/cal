local calendar = require "dromozoa.calendar"

local floor = math.floor

local function SGR(n)
  return "\27[" .. n .. "m"
end

local sgr_today = SGR(1) .. SGR("48;5;238")
local sgr_holiday = {
  ["祝日"] = SGR(1) .. SGR(91);
  ["休日"] = SGR(1) .. SGR(91);
}
local sgr_wday = {
  [0] = SGR(91);
  [1] = "";
  [2] = "";
  [3] = "";
  [4] = "";
  [5] = "";
  [6] = SGR(96);
}
local sgr_reset = SGR(0)

local today = os.date "*t"
local today_jdn = calendar.date_to_jdn(today.year, today.month, today.day)

local year = ...
year = tonumber(year)
if not year then
  year = today.year
end

local rows = {}
for i = 1, 24 do
  local items = {}
  for j = 1, 21 do
    items[j] = false
  end
  rows[i] = items
end

local min_jdn = calendar.date_to_jdn(year,  1,  1)
local max_jdn = calendar.date_to_jdn(year, 12, 31)
local first_wday
for jdn = min_jdn, max_jdn do
  local year, month, day, wday = calendar.jdn_to_date(jdn)
  local holiday = calendar.is_holiday(year, month, day)
  if day == 1 then
    first_wday = wday
  end

  local sgr = ""
  if jdn == today_jdn then
    sgr = sgr_today
  end
  if holiday then
    sgr = sgr .. sgr_holiday[holiday.kind]
  else
    sgr = sgr .. sgr_wday[wday]
  end

  local m = month - 1
  local d = first_wday + day - 1
  local i = floor(m / 3) * 6 + floor(d / 7) + 1
  local j = m % 3 * 7 + d % 7 + 1
  rows[i][j] = {
    day = day;
    sgr = sgr;
  }
end

for i = 1, #rows do
  local items = rows[i]
  for j = #items, 1, -1 do
    if items[j] then
      break
    else
      items[j] = nil
    end
  end
end

local names = { "日", "月", "火", "水", "木", "金", "土" }
local function write_week_title(out)
  for i = 1, #names do
    local name = names[i]
    if i > 1 then
      out:write " "
    end
    local sgr = sgr_wday[i - 1]
    if sgr == "" then
      out:write(name)
    else
      out:write(sgr, name, sgr_reset)
    end
  end
end

io.write((" "):rep(29), year, "\n\n")
for i = 1, #rows do
  if i % 6 == 1 then
    local month = floor(i / 6) * 3 + 1
    if month < 10 then
      io.write(
        ("        %d月           "):format(month),
        ("        %d月           "):format(month + 1),
        ("        %d月\n"):format(month + 2))
    else
      io.write(
        ("        %d月          "):format(month),
        ("        %d月          "):format(month + 1),
        ("        %d月\n"):format(month + 2))
    end
    write_week_title(io.stdout)
    io.write "  "
    write_week_title(io.stdout)
    io.write "  "
    write_week_title(io.stdout)
    io.write "\n"
  end

  local items = rows[i]
  for j = 1, #items do
    local item = items[j]
    if j > 1 then
      if j % 7 == 1 then
        io.write "  "
      else
        io.write " "
      end
    end
    if item then
      local sgr = item.sgr
      if sgr == "" then
        io.write(("%2d"):format(item.day))
      else
        io.write(sgr, ("%2d"):format(item.day), sgr_reset)
      end
    else
      io.write "  "
    end
  end
  io.write "\n"
end
