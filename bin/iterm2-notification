case x$1 in
  x) message=`cat`;;
  *) message=$1;;
esac

# DCS
case x$TERM in
  xscreen*) printf '\33P';;
esac

# iTerm2 notification
printf '\33]9;%s\7' "$message"

# ST
case x$TERM in
  xscreen*) printf '\33\\';;
esac
