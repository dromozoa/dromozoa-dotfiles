package.path = os.getenv("HOME") .. "/dromozoa-dotfiles/?.lua;" .. package.path

local encode_base64 = require "dromozoa.encode_base64"

local filename = ...
local data
if filename then
  local handle = assert(io.open(filename, "rb"))
  data = handle:read "*a"
  handle:close()
else
  data = io.read "*a"
end

local term = os.getenv "TERM"

-- DCS
if term:find "^screen" then
  io.write "\27P"
end

-- iTerm2 background image file
io.write "\27]1337;File="
if filename then
  io.write("name=", encode_base64(filename), ";")
end
io.write("size=", #data, ";inline=1:", encode_base64(data), "\7")

-- ST
if term:find "^screen" then
  io.write "\27\\"
end
