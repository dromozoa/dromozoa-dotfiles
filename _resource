. "$HOME/dromozoa-dotfiles/_environ"

if (locale -a | grep -iE 'ja_JP\.UTF-?8') >/dev/null 2>&1
then
  LANG=ja_JP.UTF-8
else
  LANG=C.UTF-8
fi

EDITOR=vim

CPPFLAGS=\
"-I$HOME/prefixes/dromozoa/include "\
"-I/opt/dromozoa/include"

LDFLAGS=\
"-L$HOME/prefixes/dromozoa/lib "\
"-L/opt/dromozoa/lib"
case x`uname 2>&1 || :` in
  xDarwin) ;;
  *) LDFLAGS="$LDFLAGS -Wl,-rpath -Wl,$HOME/prefixes/dromozoa/lib $LDFLAGS -Wl,-rpath -Wl,/opt/dromozoa/lib";;
esac

export LANG EDITOR CPPFLAGS LDFLAGS

set -o vi

alias c=clear
alias e=exit
alias l='ls -al'
alias o='cd "$OLDPWD"'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias rmfr='\rm -fr'

case x`uname` in
  xDarwin)
    alias ls='ls -F -G'
    LSCOLORS=gxcxheheDxagadabagacad
    export LSCOLORS;;
  *)
    alias ls='ls -F --color=auto';;
esac

# git
alias git-push-all-tags-dry-run='git-push-all-tags --dry-run'
alias git-clean='git clean -d -x'
alias git-status='git status'
alias git-tag='git tag -m "" -a'

# git checkout
alias git-checkout-master='git checkout master'
alias git-checkout-develop='_dromozoa_git_checkout develop master'
alias git-checkout-feature='_dromozoa_git_checkout feature develop'
alias git-checkout-release='_dromozoa_git_checkout release develop'

# git commit
alias git-commit-refactoring='git commit -m "リファクタリング。"'
alias git-commit-preapre='git commit -m "リリース準備。"'
alias git-commit-release='git commit -m "リリースメッセージを設定。"'

# git commit file
alias git-commit-rename-file='git commit -m "ファイル名を変更。"'
alias git-commit-move-file='git commit -m "ファイルを移動。"'
alias git-commit-remove-file='git commit -m "ファイルを削除。"'

# git commit document
alias git-commit-add-document='git commit -m "文書を追加。"'
alias git-commit-update-document='git commit -m "文書を更新。"'

alias tig-all='tig --all'

alias 51='PATH=`_dromozoa_path "$PATH" 51`; MANPATH=`_dromozoa_path "$PATH" 51`; export PATH MANPATH; hash -r'
alias 52='PATH=`_dromozoa_path "$PATH" 52`; MANPATH=`_dromozoa_path "$PATH" 52`; export PATH MANPATH; hash -r'
alias 53='PATH=`_dromozoa_path "$PATH" 53`; MANPATH=`_dromozoa_path "$PATH" 53`; export PATH MANPATH; hash -r'
