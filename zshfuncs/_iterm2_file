_iterm2_file() {
  _arguments \
    '(- *)--help' \
    '(-i --inline)'{-i,--inline} \
    '(-w --width)'{-w,--width=}':' \
    '(-h --height)'{-h,--height=}':' \
    '(-s --no-preserve-aspect-ratio)'{-p,--no-preserve-aspect-ratio} \
    '*:: :_files'
}
