_luarocks_command_remove() {
  local curcontext="$curcontext"
  local context state state_descr line
  typeset -A opt_args

  local -a options
  _dromozoa_luarocks_general_options
  _dromozoa_luarocks_remove_options

  _arguments -C \
    $options \
    ": :_luarocks_name"
}

_luarocks_command() {
  local -a commands
  _dromozoa_luarocks_commands
  _describe commands commands
}

_luarocks_name() {
  local -a names
  luarocks list --porcelain | while read name _
  do
    names=($names "$name")
  done
  _describe names names
}

_luarocks_rockspec() {
  local -a rockspecs
  for rockspec in *.rockspec
  do
    rockspecs=($rockspecs "$rockspec")
  done
  _describe rockspecs rockspecs
}
