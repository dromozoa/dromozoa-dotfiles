_luarocks() {
  local curcontext="$curcontext"
  local context state state_descr line
  typeset -A opt_args

  local -a options
  _dromozoa_luarocks_general_options

  _arguments -C \
    $options \
    ": :_luarocks_command" \
    "*:: :->argument"

  local result
  case x$state in
    xargument)
      if _call_function result "_luarocks_command_$words[1]"
      then
        :
      else
        _luarocks_command_generic "$words[1]"
      fi;;
  esac
}

_luarocks_command_generic() {
  local curcontext="$curcontext"
  local context state state_descr line
  typeset -A opt_args

  local -a options
  _dromozoa_luarocks_general_options

  _arguments -C \
    $options
}

