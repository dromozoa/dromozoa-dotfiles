. "$HOME/dromozoa-dotfiles/_resource"

_dromozoa_prompt() {
  local start='\[\e[91m\]'
  local reset='\[\e[m\]'
  case x$TERM in
    xscreen) start='\[\e[92m\]';;
  esac
  PS1="$start\u@\h:\w\$$reset "
  PS2="$start>$reset "
}
_dromozoa_prompt
unset -f _dromozoa_prompt

HISTCONTROL=ignoreboth
HISTSIZE=65536
HISTFILESIZE=65536
HISTTIMEFORMAT="%Y-%m-%d %H:%M:%S "

alias h='history | grep'
